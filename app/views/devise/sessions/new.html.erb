<div id="content">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :login %><br />
  <span class = "tooltip" title = "enter your username or email"><%= f.text_field :login, :placeholder => "username or email" %></span></div>

  <div><%= f.label :password %><br />
  <span class = "tooltip" title = "enter your password"><%= f.password_field :password, :placeholder => "password" %></span></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>

<p><%= link_to "Back", root_path %></p>

</div>